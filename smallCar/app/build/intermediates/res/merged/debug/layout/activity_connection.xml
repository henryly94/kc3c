<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="My IP"
        android:id="@+id/conn_tv_myip"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/conn_tv_ip_value"
        android:layout_alignTop="@+id/conn_tv_myip"
        android:layout_alignBottom="@+id/conn_tv_myip"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/conn_tv_myip"
        android:gravity="center_vertical"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="Target IP"
        android:id="@+id/conn_tv_targetip"
        android:layout_below="@+id/conn_tv_myip"
        android:layout_margin="10dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/conn_tv_tar_ip_value"
        android:layout_alignTop="@+id/conn_tv_targetip"
        android:layout_alignBottom="@+id/conn_tv_targetip"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/conn_tv_targetip"
        android:gravity="center_vertical"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Message"
        android:id="@+id/conn_tv_message"
        android:layout_below="@+id/conn_tv_targetip"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:layout_alignEnd="@+id/conn_tv_tar_ip_value" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/conn_tv_message">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Connection"
            android:id="@+id/conn_btn_conn"
            android:layout_centerVertical="true"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Send/Receive"
            android:id="@+id/conn_btn_message"
            android:layout_weight="1" />

    </LinearLayout>


</RelativeLayout><!-- From: file:/D:/workspace/KC3C/smallCar/app/src/main/res/layout/activity_connection.xml -->